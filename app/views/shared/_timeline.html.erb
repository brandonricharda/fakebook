<% posts.each do |post| %>
    <p><%= post.author %></p>
    <p><%= time_ago_in_words(post.created_at)%> ago</p>
    <%= post.content %></br></br>
    <% if current_user.likes_include?(post) %>
        <%= form_for current_user.find_like(post), method: :delete do |f| %>
            <%= f.submit "Unlike" %>
        <% end %>
    <% else %>
        <%= form_for @like do |f| %>
            <%= f.hidden_field :post_id, :value => post.id %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.submit "Like" %>
        <% end %>
    <% end %>
<% end %>